{
  "version": "1.0.0-beta.12",
  "name": "vue-composable-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "description": "Vue composition-api composable components",
  "author": {
    "name": "pikax",
    "email": "carlos@hypermob.co.uk"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pikax/vue-composable.git"
  },
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "build:vue2": "yarn build --version=2",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "release": "node scripts/publish.js",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "test:vue2": "cross-env VUE=2 yarn test",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lint": "prettier \"packages/**/*.ts\" \"docs/(.vuepress|Examples|composable)/**/*.md\" \"docs/.vuepress/*.js\" \"docs/**/*.vue\" --write"
  },
  "bugs": {
    "url": "https://github.com/pikax/vue-composable/issues"
  },
  "homepage": "https://pikax.me/vue-composable/composable",
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.vue": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.12.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/jest": "26.0.19",
    "@types/node": "^14.14.13",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/composition-api": "^1.0.0-beta.21",
    "@vue/reactivity": "^3.0.4",
    "@vue/runtime-core": "^3.0.4",
    "@vue/runtime-dom": "^3.0.4",
    "@vuepress/plugin-back-to-top": "^1.7.1",
    "@vuepress/plugin-pwa": "^1.7.1",
    "axios": "^0.21.0",
    "brotli": "^1.3.2",
    "chalk": "^4.1.0",
    "conventional-changelog-cli": "^2.1.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "execa": "^5.0.0",
    "fs-extra": "^9.0.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-websocket-mock": "^2.2.0",
    "lint-staged": "^10.5.3",
    "lodash.camelcase": "^4.3.0",
    "minimist": "^1.2.5",
    "mock-socket": "^9.0.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "tsd": "^0.14.0",
    "typescript": "^4.1.3",
    "vue": "^2.6.12",
    "vuepress": "^1.7.1",
    "yorkie": "^2.0.0",
    "zlib": "^1.0.5"
  }
}
