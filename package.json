{
  "version": "1.0.0-dev.10",
  "name": "vue-composable-monorepo",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "description": "Vue composition-api composable components",
  "main": "index.js",
  "author": {
    "name": "pikax",
    "email": "carlos@hypermob.co.uk"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pikax/vue-composable.git"
  },
  "module": "dist/vue-composable.es.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "node scripts/build.js",
    "release": "node scripts/release.js",
    "old:build": "rollup -c rollup.config.js",
    "old:start": "rollup -c rollup.config.js -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lint": "prettier \"packages/**/*.ts\" \"docs/(.vuepress|Examples|composable)/**/*.md\" \"docs/.vuepress/*.js\" \"docs/**/*.vue\" --write"
  },
  "bugs": {
    "url": "https://github.com/pikax/vue-composable/issues"
  },
  "homepage": "https://github.com/pikax/vue-composable/blob/master/readme.md",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.7.8",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "@vue/composition-api": "^0.3.2",
    "@vuepress/plugin-back-to-top": "^1.3.1",
    "@vuepress/plugin-pwa": "^1.3.1",
    "axios": "^0.19.2",
    "brotli": "^1.3.2",
    "chalk": "^3.0.0",
    "coveralls": "^3.0.7",
    "enquirer": "^2.3.4",
    "execa": "^4.0.0",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "jest-websocket-mock": "^2.0.1",
    "lint-staged": "^10.0.7",
    "lodash.camelcase": "^4.3.0",
    "minimist": "^1.2.0",
    "mock-socket": "^9.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^1.31.1",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "ts-jest": "^25.2.1",
    "tsd": "^0.11.0",
    "typescript": "^3.8.2",
    "vue": "^2.6.10",
    "vuepress": "^1.3.1",
    "zlib": "^1.0.5"
  },
  "peerDependencies": {
    "@vue/composition-api": "^0.3.2",
    "vue": "^2.6.10"
  }
}
